<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- White Text Style-->
    <style name="WhiteText" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Facebook Button Style-->
    <style name="ThemeOverlay.FacebookButton" parent="WhiteText">
        <item name="colorButtonNormal">@color/facebook_color</item>
    </style>

    <!-- InstagramButton Style-->
    <style name="ThemeOverlay.InstagramButton" parent="WhiteText">
        <item name="colorButtonNormal">@color/instagram_color</item>
    </style>

    <!-- Google Button Style-->
    <style name="ThemeOverlay.GoogleButton" parent="WhiteText">
        <item name="colorButtonNormal">@color/google_color</item>
    </style>

    <!-- Manual Log In Button Style-->
    <style name="ThemeOverlay.ManualLogInButton" parent="WhiteText">
        <item name="colorButtonNormal">@color/manual_login_color</item>
    </style>

    <!-- Manual Register Button Style-->
    <style name="ThemeOverlay.ManualRegisterButton" parent="WhiteText">
        <item name="colorButtonNormal">@color/manual_register_color</item>
    </style>

</resources>
